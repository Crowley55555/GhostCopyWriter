# =============================================================================
# GHOSTWRITER - PRODUCTION ENVIRONMENT
# =============================================================================
# Скопируйте этот файл в .env на production сервере
# ВАЖНО: Замените все значения на реальные!
# =============================================================================

# =============================================================================
# DJANGO CORE (ОБЯЗАТЕЛЬНО)
# =============================================================================

# Сгенерируйте новый ключ: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=CHANGE_ME_TO_RANDOM_50_CHAR_STRING

# Ваши домены (через запятую, без пробелов)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ОБЯЗАТЕЛЬНО False для production
DEBUG=False

# =============================================================================
# БАЗА ДАННЫХ PostgreSQL (ОБЯЗАТЕЛЬНО)
# =============================================================================

DB_HOST=db
DB_NAME=ghostwriter
DB_USER=ghostwriter
DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD_32_CHARS
DB_PORT=5432

# =============================================================================
# REDIS (ОБЯЗАТЕЛЬНО)
# =============================================================================

REDIS_URL=redis://redis:6379/0

# =============================================================================
# GIGACHAT API (ОБЯЗАТЕЛЬНО для российского AI)
# =============================================================================

# Получите ключ на https://developers.sber.ru/portal/products/gigachat
GIGACHAT_CREDENTIALS=YOUR_GIGACHAT_AUTHORIZATION_KEY
GIGACHAT_SCOPE=GIGACHAT_API_PERS

# =============================================================================
# FLASK МИКРОСЕРВИС (ОБЯЗАТЕЛЬНО если используете OpenAI)
# =============================================================================

# URL вашего Flask сервера на зарубежном хостинге
FLASK_EXTERNAL_URL=https://flask.yourdomain.com

# Ключ шифрования (должен быть одинаковым на Django и Flask серверах)
# Сгенерируйте: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
GENERATOR_ENCRYPTION_KEY=CHANGE_ME_TO_FERNET_KEY

# =============================================================================
# TELEGRAM BOT (ОБЯЗАТЕЛЬНО)
# =============================================================================

# Получите у @BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Username бота (без @, для return URL после оплаты)
BOT_USERNAME=ghostwriter_bot

# Telegram владельца/разработчика для перенаправления клиентов
OWNER_TELEGRAM=@rain511

# Секрет для webhook (сгенерируйте: openssl rand -hex 32)
TELEGRAM_WEBHOOK_SECRET=CHANGE_ME_TO_RANDOM_64_CHAR_HEX

# URL вашего сайта (без trailing slash)
SITE_URL=https://yourdomain.com

# API ключ для связи Django-Bot (опционально, для дополнительной безопасности)
# Если не указан, бот будет работать без API ключа
DJANGO_API_KEY=

# Реквизиты исполнителя (для публичной оферты)
EXECUTOR_FULL_NAME=ФИО полностью
EXECUTOR_INN=123456789012
EXECUTOR_PHONE=+7 (999) 123-45-67
EXECUTOR_EMAIL=your-email@example.com
EXECUTOR_TELEGRAM=@username
EXECUTOR_CITY=Москва, Россия

# =============================================================================
# ПЛАТЁЖНЫЕ СИСТЕМЫ (ОБЯЗАТЕЛЬНО для приёма платежей)
# =============================================================================

# ЮКасса (основная)
# Получить: https://yookassa.ru → Личный кабинет → Интеграция → Ключи API
# Webhook URL для настройки в ЮКасса: https://yourdomain.com/api/payments/yookassa/webhook/
YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key

# Тинькофф Касса (резервная, опционально)
# TINKOFF_TERMINAL_KEY=your-terminal-key
# TINKOFF_PASSWORD=your-password

# API ключ для связи Django-Bot (опционально, для дополнительной безопасности)
# DJANGO_API_KEY=your-api-key-here

# Цены тарифов задаются в generator/tariffs.py:
# - Бесплатный старт: 0₽ (30K GigaChat + 30K OpenAI, бессрочно)
# - Базовый: 590₽/мес (200K GigaChat + 100K OpenAI, 30 дней)
# - Про: 1190₽/мес (500K GigaChat + 200K OpenAI, 30 дней)
# - Безлимит: 2490₽/мес (∞ GigaChat + 500K OpenAI, 30 дней)

# =============================================================================
# HTTPS (ОБЯЗАТЕЛЬНО для production)
# =============================================================================

USE_HTTPS=true

# =============================================================================
# FLASK СЕРВЕР - .env (создайте отдельный файл на зарубежном сервере)
# =============================================================================

# OPENAI_API_KEY=sk-your-openai-api-key
# GENERATOR_ENCRYPTION_KEY=same-as-django-server
# OPENAI_MODEL=gpt-4
# DALLE_MODEL=dall-e-3
